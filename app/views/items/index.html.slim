p#notice
  = notice
div[ng-controller="DashboardCtrl"]
  h1
    | Listing Items{{test_value}}
  table
    thead
      tr
        th
          | Name
        th
          | Price
        th[colspan="3"]
    tbody
      - @items.each do |item|
        tr
          td
            = item.name
          td
            = item.price
          td
            = link_to 'Show', item
          td
            = link_to 'Edit', edit_item_path(item)
          td
            = link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

  div[ng-view=""]

  = text_field_tag :test_value, "", "ng-model" => "test_value"

  br
  = link_to 'New Item', new_item_path
